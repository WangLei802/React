server {
    listen       80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
        error_page 404 /index.html;
    }

    error_page   500 502 503 504 404 /50x.html;

    location = /50x.html {
        root   /usr/share/nginx/html;
    }

    location /api/ {
        proxy_pass http://${GATEWAY_SERVER_CONTAINER_NAME}:8080/;
    }
}
